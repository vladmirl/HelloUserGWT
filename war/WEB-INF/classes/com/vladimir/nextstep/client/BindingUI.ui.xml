<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	  <ui:with field='i18n' type='com.vladimir.nextstep.client.Localisation'/> 
	
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel>
	
	<!-- <ui:with field='res' type='war.myImages.futer.png'/> -->
	  <!--  <g:Image resource='{/myImages/Logo-ARDAS.png}'/>  -->
	  
	<form style= "width: 700px; height: 220px; padding: 20px; background: #eee; border: 5px solid #aaa; margin: 1px;">
	 <div align="center">
	 
	<g:VerticalPanel ui:field="startPanel">
            <g:Label ui:field= "loginLabel" text="{i18n.loginLabelField_text}" />
            <g:TextBox ui:field="loginBox"  />
            <g:Label ui:field="passwordLabel" text="{i18n.passwordLabelField_text}" />
            <g:PasswordTextBox ui:field="passwordBox"  />
               <g:Button ui:field="enterButton" text="{i18n.enterButton_html}" />
             </g:VerticalPanel>
      
          <g:VerticalPanel ui:field="userPanel" >
                 <g:Label ui:field= "greetingLabel" text="greeting" />
                 <g:Anchor ui:field= "closeAnchor" text="{i18n.closeAnchorField_html}">exit from the user page</g:Anchor>
                 </g:VerticalPanel>
        
              </div>    
	    </form> 
	</g:HTMLPanel>
</ui:UiBinder> 